config globals 'globals'
	option multipath 'enable'

config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'
	option multipath 'off'

config interface 'lan'
	option ifname 'eth0'
	option proto 'none'
	option multipath 'off'

config interface 'if0'
	option ifname 'if0'
	option type 'macvlan'
	option interface 'eth0'
	option proto 'dhcp'
	option defaultroute '0'
	option peerdns '0'
	option delegate '0'
	option multipath 'off'

config interface 'tun0'
	option ifname 'tun0'
	option proto 'none'
	option multipath 'off'
	option delegate '0'
	option metric '100'
